{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}Test 2{% endblock %}

{% block content %}

<div class="container">
  <h1>{{ name }}</h1>

  <figure style="float: left; width: 450px; height: 300px; margin-right: 10px; shape-outside: inset(0);">
    <img src="/img//landmarks/{{ image }}" alt="Dinosaur" width="100%" height="100%">
  </figure>

  <div class="text">
    <p>{{ description | safe }}</p>
  </div>
</div>

{% endblock %}
