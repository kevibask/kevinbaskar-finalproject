<div class="container">
  <div class="row g-5">

    <div class="col-md-4 order-md-2">

      <h2 class="display-5 link-body-emphasis mb-1 pb-4 mb-4 fst-italic d-md-none d-block text-center">{{ name }}</h2>

      <img src="/img/landmarks/{{ image }}" style="width: 100%; height: auto; border-radius: 5px; object-fit: cover; margin-bottom: 20px;">

      <div class="position-sticky" style="top: 2rem;">
        <div class="p-4 mb-3 bg-body-tertiary rounded">
          <h4 class="fst-italic">Key Information</h4>
        
          <p class="mb-0" style="border-bottom: 1px solid #000;">{{ established }}</p>
          <p class="mb-0" style="border-bottom: 1px solid #000;"><strong>Address:</strong> {{ location }}</p>
          <p class="mb-0" style="border-bottom: 1px solid #000;"><strong>Things to do:</strong> {{ activities }}</p>
          <p class="mb-0" style="margin-bottom: 0;"><strong>Website Link:</strong>
              <a href="{{ url }}" class="icon-link gap-1 icon-link-hover stretched-link">
                  {{ name }}
                  <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
              </a>
          </p>
        </div>
      </div>
    </div>


    <div class="col-md-8 order-md-1">

      <article class="blog-post">

        <h2 class="display-5 link-body-emphasis mb-1 pb-4 mb-4 fst-italic border-bottom d-none d-md-block">{{ name }}</h2>

        <div class="text">
          {{ description | safe }}
        </div>
      </article>
    </div>

  </div>

</div>

{% endblock %}
